<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#603dbb" >

    <RelativeLayout
        android:id="@+id/linearPrincipa6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:textSize="20dip"
            android:text="Opciones de Conexion"
            android:id="@+id/textViewOpTitulo" />


        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP del servidor o dominio:"
            android:id="@+id/textViewOpIP"
            android:layout_below="@id/textViewOpTitulo"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpIP"
            android:layout_below="@id/textViewOpIP"/>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puerto:"
            android:id="@+id/textViewOpPuerto"
            android:layout_below="@id/editTextOpIP"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:id="@+id/editTextOpPuerto"
            android:layout_below="@id/textViewOpPuerto"/>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parametro:"
            android:id="@+id/textViewOpParametro"
            android:layout_below="@id/editTextOpPuerto"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpParametro"
            android:layout_below="@id/textViewOpParametro"/>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre dispositivo 1 :"
            android:id="@+id/textViewOpNameDev1"
            android:layout_below="@id/editTextOpParametro"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpNameDev1"
            android:layout_below="@id/textViewOpNameDev1"/>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC dispositivo 1 para hacer WOL:"
            android:id="@+id/textViewOpMACDev1"
            android:layout_below="@id/editTextOpNameDev1"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpMACDEV1"
            android:layout_below="@id/textViewOpMACDev1"/>


        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre dispositivo 2 :"
            android:id="@+id/textViewOpNameDev2"
            android:layout_below="@id/editTextOpMACDEV1"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpNameDev2"
            android:layout_below="@id/textViewOpNameDev2"/>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC dispositivo 2 para hacer WOL:"
            android:id="@+id/textViewOpMACDev2"
            android:layout_below="@id/editTextOpNameDev2"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:id="@+id/editTextOpMACDEV2"
            android:layout_below="@id/textViewOpMACDev2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:text=" Guardar Opciones "
            android:id="@+id/buttonOpGuardar"
            android:layout_below="@id/editTextOpMACDEV2"/>


    </RelativeLayout>
</ScrollView>