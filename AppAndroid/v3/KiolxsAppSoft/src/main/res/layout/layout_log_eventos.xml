<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b01a40"
    android:id="@+id/LinearLayoutLogEventos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewRegistroEventos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:text="Registro de eventos"
        android:textAlignment="center"
        android:autoText="false"
        android:textSize="20dip"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextRegistroEventos"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:layout_width="336dp"
        android:layout_height="499dp"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:ems="10"
        android:background="@drawable/shape_edittext"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        style="shape_edittext"
        android:gravity="top"
        android:paddingLeft="10dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="12dip" />

    <Button
        android:id="@+id/buttonRefrescarLogEventos"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Refrescar log eventos " />
</LinearLayout>