<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">


    <RelativeLayout
        android:id="@+id/relativeLayoutServidor2Ext"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayoutServidor2Int1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordes_redondos"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/FrameLayoutServidor2Linea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewTestingLED2"
            android:background="@drawable/ledpanel"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTING LED: "
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

            <Switch
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/switchTestingLed2"
                android:textOff="Apagar"
                android:textOn="Encender"
                android:layout_marginLeft="100dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/FrameLayoutServidor2Linea2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FrameLayoutServidor2Linea1">

        </FrameLayout>


    </RelativeLayout>


</RelativeLayout>

</ScrollView>
