<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">


    <RelativeLayout
        android:id="@+id/relativeLayoutServidorExt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayoutServidorInt1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordes_redondos"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/FrameLayoutServidorLinea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewTestingLED"
            android:background="@drawable/ledpanel"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTING LED: "
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

            <Switch
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/switchTestingLed"
                android:textOff="Apagar"
                android:textOn="Encender"
                android:layout_marginLeft="100dp" />
        </FrameLayout>

    </RelativeLayout>

     <RelativeLayout
            android:id="@+id/relativeLayoutServidorInt2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bordes_redondos"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_below="@id/relativeLayoutServidorInt1">

            <FrameLayout
                android:id="@+id/FrameLayoutServidorLinea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewTV"
                    android:background="@drawable/tvpanel"
                    android:scaleType="fitXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Television LG: "
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"/>

                <Switch
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/switchTvLG"
                    android:textOff="Apagar"
                    android:textOn="Encender"
                    android:layout_marginLeft="100dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayoutServidorLinea4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FrameLayoutServidorLinea3">

                <ImageView
                    android:id="@+id/imageViewTVvolUP"
                    android:src="@drawable/volumeup"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewTVvolDOWN"
                    android:src="@drawable/volumedown"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="87dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewTVChUP"
                    android:src="@drawable/channelup"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="140dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewTVChDown"
                    android:src="@drawable/channeldown"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="193dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewTVvolMute"
                    android:src="@drawable/volumemute"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="245dp"
                    android:layout_gravity="left" />

            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutServidorInt3"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bordes_redondos"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_below="@id/relativeLayoutServidorInt2">

            <FrameLayout
                android:id="@+id/FrameLayoutServidorLinea6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewAire"
                    android:background="@drawable/airepanel"
                    android:scaleType="fitXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aire AC/AC: "
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"/>

                <Switch
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/switchAire"
                    android:textOff="Apagar"
                    android:textOn="Encender"
                    android:layout_marginLeft="100dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayoutServidorLinea7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FrameLayoutServidorLinea6">

                <ImageView
                    android:id="@+id/imageViewAireTimer"
                    android:src="@drawable/timer"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewAireCancel"
                    android:src="@drawable/cancel"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="87dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewAireTempUP"
                    android:src="@drawable/channelup"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="140dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewAireTempDown"
                    android:src="@drawable/channeldown"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="193dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:id="@+id/imageViewAirePowerful"
                    android:src="@drawable/powerful"
                    android:background="@drawable/bordes_redondos"
                    android:scaleType="fitXY"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="245dp"
                    android:layout_gravity="left" />

            </FrameLayout>
        </RelativeLayout>


</RelativeLayout>

</ScrollView>
